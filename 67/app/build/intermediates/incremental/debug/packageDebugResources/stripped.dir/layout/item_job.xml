<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#252525"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvJobStatus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="â³"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/status_badge" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvJobIntent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="research"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvJobCommand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="research quantum computing"
                    android:textSize="12sp"
                    android:textColor="#AAAAAA"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvJobTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2m"
                android:textSize="11sp"
                android:textColor="#666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvJobMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting research..."
            android:textSize="12sp"
            android:textColor="#888888"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvJobResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="#4CAF50"
            android:maxLines="6"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2dp"
            android:visibility="gone" />

        <!-- Listen and Stop buttons for completed jobs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/llAudioControls">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListen"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="ðŸ”Š Listen"
                android:textSize="12sp"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TonalButton"
                app:cornerRadius="18dp"
                app:backgroundTint="#2D2D2D"
                android:textColor="#6C63FF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStopAudio"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="â¹ Stop"
                android:textSize="12sp"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TonalButton"
                app:cornerRadius="18dp"
                app:backgroundTint="#2D2D2D"
                android:textColor="#FF6B6B" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardJobImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivJobImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#1E1E1E" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
